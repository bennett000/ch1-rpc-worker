{
  "name": "@ch1/rpc-worker",
  "description": "JavaScript Remote Procedure Call (RPC) - Web Worker Adapter",
  "keywords": [
    "rpc",
    "remote",
    "procedure",
    "call",
    "parallel",
    "worker",
    "socket",
    "socket.io",
    "webworker",
    "postMessage"
  ],
  "version": "1.0.0",
  "author": {
    "name": "Michael J. Bennett",
    "email": "dev@michaeljbennett.info",
    "url": "https://michaeljbennett.info"
  },
  "contributors": [],
  "license": "LGPL-3.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/bennett000/ch1-rpc-worker"
  },
  "homepage": "https://github.com/bennett000/ch1-rpc-worker",
  "bugs": {
    "url": "https://github.com/bennett000/ch1-rpc-worker/issues"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "clean": "rimraf ./intermediate && rimraf ./dist",
    "precommit": "lint-staged",
    "pretest": "rimraf coverage && yarn build && rollup -c",
    "test": "karma start ./karma.conf.js"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "husky": "^0.14.3",
    "jasmine-core": "^3.1.0",
    "jest": "^23.1.0",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.2",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "rimraf": "^2.5.2",
    "rollup": "^0.65.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "ts-jest": "^22.4.6",
    "typescript": "^3.0.3",
    "yarn": "^1.9.4"
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write --single-quote --trailing-comma all --print-width 78",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/interfaces.ts"
    ],
    "coverageDirectory": "coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 90
      }
    },
    "modulePathIgnorePatterns": [
      "/coverage/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "^node_modules/(?!@ch1).*$"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@ch1/rpc": "^1.0.4",
    "@ch1/utility": "^0.5.1"
  }
}
